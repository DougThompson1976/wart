(test "aand works"
 :valueof (let x list.3
            (aand x (< car.it 4)))
 :should ~be nil)

(test "while works"
 :valueof (ret ans 0
            (let x 3
              (while (> x 0)
                ++.ans
                --.x)))
 :should be 3)

(test "for works"
 :valueof (ret ans 0
            (for x 0 (< x 3) ++.x
              ++.ans))
 :should be 3)
