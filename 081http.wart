(def http-serve(? port 8080)
  (w/server-socket s port
    (repeat 6
      (fork (thunk
              (accepting stream :from s
                (w/stdout stream
                  (http-handler parse-http-request.stream))))))
    (wait-for-children)))

(def http-handler(req)
  (prn req!body)
  (prn "<hr>")
  (prn req!args))
