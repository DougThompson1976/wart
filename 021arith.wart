let $+ +
  def + xs
    (reduce $+ xs)

let $- -
  def - xs
    (reduce $- xs)

let $* *
  def * xs
    (reduce $* xs)

let $/ /
  def / xs
    (reduce $/ xs)

let $% %
  def % xs
    (reduce $% xs)

(let $> >
  def > xs
    (all (fn((x y)) ($> x y))
         pairwise.xs)

  def < xs
    (all (fn((x y)) ($> y x))
         pairwise.xs))

assign exceed > ; for testing

mac ++($n)
  `(assign ,$n (+ ,$n 1))

mac --($n)
  `(assign ,$n (- ,$n 1))
