def (test msg (| 'qpred pred should) expr|valueof expected)
  if (pred expr expected)
    (err ".")
    (register_failed_test msg expr
                          (if (expr ~= expected)
                            expected
                            `(,qpred _ ,expected)))

def (pending_test 'msg 'expr|valueof 'pred|should 'expected)
  (err "
pending: ")
  (err msg)

alias be (=)
alias equal (=)

def (match a b)
  (match? b a)

def (be_true x)
  x

def (be_false x)
  no.x

def a~=b
  (not a=b)
(test "foo" (=) 2+2 4)
trace "bind"
  (test "foo" :valueof 2+2 :should be 4)
exit 0
