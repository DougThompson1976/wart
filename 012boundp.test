(setf a 3)
(test-wart "boundp needs no quoting"
  :valueof (boundp a)
  :should satisfy true_value)

(setf a nil)
(test-wart "boundp assumes wiped vars are unbound"
  :valueof (boundp a)
  :should be nil)

(test-wart "boundp works for lexicals"
  :valueof (_let a 3 (boundp a))
  :should satisfy true_value)
