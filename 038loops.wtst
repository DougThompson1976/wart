(test "whiler works"
  :valueof (accum acc
             (with-input-from-string(f "abcdef")
               (whiler x (read-char f) #\d
                  (acc x))))
  :should be '(#\a #\b #\c))

(test "drain works"
  :valueof (let s '(1 2 3)
             (drain (pop s)))
  :should be '(1 2 3))

(test "each works"
  :valueof (let counter 0
             (each x '(1 2 3) ++.counter)
             counter)
  :should be 3)

(test "each binds var"
  :valueof (let counter 0
             (each x '(1 2 3) (++ counter x))
             counter)
  :should be 6)

(test "each works on strings"
  :valueof (accum acc
             (each x "abc" (acc x)))
  :should be '(#\a #\b #\c))

(test "each works on tables"
  :valueof (sort
             (accum acc
               (let h (table)
                 (= h.1 2 h.3 4)
                 (each (k v) h (acc k))))
             '<)
  :should be '(1 3))

(test "xloop works"
  :valueof (ret counter 0
             (xloop (x 0)
               (++ counter x)
               (if (< x 10)
                    (next (+ x 1)))))
  :should be 55)
